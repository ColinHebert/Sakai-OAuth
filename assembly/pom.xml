<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>oauth-base</artifactId>
    <groupId>uk.ac.ox.oucs</groupId>
    <version>1.0</version>
  </parent>
  <groupId>uk.ac.ox.oucs</groupId>
  <artifactId>oauth-assembly</artifactId>
  <version>1.0</version>
  <name>OAuth Assembly</name>
  <packaging>pom</packaging>
  <dependencies>
   <dependency>
      <groupId>uk.ac.ox.oucs</groupId>
      <artifactId>oauth-api</artifactId>
      <type>jar</type>
      <version>${project.version}</version>
    </dependency>
   <dependency>
      <groupId>uk.ac.ox.oucs</groupId>
      <artifactId>oauth-pack</artifactId>
      <type>sakai-component</type>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>uk.ac.ox.oucs</groupId>
      <artifactId>oauth-tool</artifactId>
      <type>war</type>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>uk.ac.ox.oucs</groupId>
      <artifactId>oauth-shared</artifactId>
      <type>pom</type>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/deploy.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id> <!-- this is used for inheritance merges -->
            <phase>package</phase> <!-- append to the packaging phase. -->
            <goals>
              <goal>single</goal> <!-- goals == mojos -->
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
